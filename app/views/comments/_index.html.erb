<% comments.each do |comment| %>
	<table>
		<tr>
			<td><%= comment.user.name %></td>
			<td><%= comment.content %></td>
			<% if comment.user_id == current_user.id %>
				<td>
					<%= link_to "編集", edit_training_comment_path(comment.training_id, comment.id), remote: true %>
					<%= link_to "削除", training_comment_path(comment.training_id, comment.id), method: :delete, remote: true %>
				</td>
			<% end %>
		</tr>
	</table>
<% end %>