<% comments.each do |comment| %>
	<table class="table comment_table">
		<tr>
			<td style="border:none;"><%= comment.user.name %></td>
			<td class="comment_field"><%= comment.content %></td>
			<% if user_signed_in? == true %>
				<% if comment.user_id == current_user.id %>
					<td>
						<%= link_to "削除", training_comment_path(comment.training_id, comment.id), method: :delete, remote: true, class: "btn btn-danger btn-sm" %>
					</td>
				<% else %>
					<td></td>
				<% end %>
			<% end %>
		</tr>
	</table>
<% end %>

