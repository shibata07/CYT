<h2 class="head_content">新規ユーザ登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="row">
    <div class="col-md-2 offset-md-3">名前</div>
    <div class="col-md-4">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
    <div class="offset-md-3"></div>
  </div><br>

  <div class="row">
    <div class="col-md-2 offset-md-3">プロフィール画像</div>
    <div class="col-md-4">
      <%= f.file_field :image_id %>
    </div>
    <div class="offset-md-3"></div>
  </div><br>

  <div class="row">
    <div class="col-md-2 offset-md-3">メールアドレス</div>
    <div class="col-md-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="offset-md-3"></div>
  </div><br>

  <div class="row">
    <div class="col-md-2 offset-md-3">パスワード(6字以上)</div>
    <div class="col-md-4">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="offset-md-3"></div>
  </div><br>

  <div class="row">
    <div class="col-md-2 offset-md-3">パスワード(確認)</div>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="offset-md-3"></div>
  </div><br>

  <div class="row">
    <div class="offset-md-5"></div>
    <div class="col-md-4 text-right">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
    <div class="offset-md-3"></div>
  </div>

<% end %>


