<h3 class="head_content"><%= @user.name %>のフォロワー</h3>
<% if @user.followers.count == 0 %>
	<div class="text-center">
		<p>ユーザはいません</p>
	</div>
<% else %>
	<div class="row">
		<div class="col-md-10 offset-md-1">
			<table class="table">
				<% @user.followers.each do |follower| %>
					<tr>
						<td><%= image_tag follower.image_id.url, class: "index_icon_image" %></td>
						<td>
							<%= link_to user_path(follower.id) do %>
								<%= follower.name %>
							<% end %>
						</td>
						<td>フォロー数: <%= follower.active_relationships.count %></td>
						<td>フォロワー数: <%= follower.passive_relationships.count %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
<% end %>
