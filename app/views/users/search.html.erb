<% if @users.count == 0 %>
	<h2 class="head_content">ユーザが見つかりませんでした</h2>
<% else %>

	<h2 class="head_content"><%= @word %>検索結果: <%= @users.count %>人</h2>
	<div class="search-container">
		<% @users.each do |user| %>

			<table class="search-table">
				<tr>
					<td>
						<%= image_tag user.image_id.url, class: "index_icon_image" %>
					</td>
					<td>
						<%= link_to user_path(user.id) do %>
							<%= user.name %>
						<% end %>
					</td>
					<td>フォロー数: <%= user.followings.count %></td>
					<td>フォロワー数: <%= user.followers.count %></td>
				</tr>
			</table>

		<% end %>
	</div>
<% end %>